{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User",
  "type": "object",
  "required": ["name", "id", "email"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The person's first name."
    },
    "id": {
      "type": "string",
      "description": "The user's ID."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": " User email addres"
    }
  }
}
